<Window x:Class="Teller_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Teller_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="btnWeergeven" Content="Waarde Teller Weergeven" Click="BtnWeergeven_Click" FontSize="25" Margin="10" Grid.Row="0"></Button>
        <Button x:Name="btnVerhogen" Content="Waarde Verhogen Met 1" Click="BtnVerhogen_Click" FontSize="25" Margin="10" Grid.Row="1"></Button>
        <Button x:Name="btnVerlagen" Content="Waarde Verlagen Met 1" Click="BtnVerlagen_Click" FontSize="25" Margin="10" Grid.Row="2"></Button>
        <Button x:Name="btnResetten" Content="Waarde Resetten" Click="BtnResetten_Click" FontSize="25" Margin="10" Grid.Row="3"></Button>
        <Button x:Name="btnSluiten" Content="Sluiten" Click="BtnSluiten_Click" FontSize="25" Margin="10" Grid.Row="4"></Button>
    </Grid>
</Window>