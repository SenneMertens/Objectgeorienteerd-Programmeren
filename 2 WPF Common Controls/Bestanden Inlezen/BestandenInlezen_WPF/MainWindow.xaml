<Window x:Class="BestandenInlezen_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BestandenInlezen_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <GroupBox Header="Tonen" FontSize="25" Margin="10">
            <WrapPanel VerticalAlignment="Center">
                <CheckBox x:Name="cbGeldigeRecords" Content="Geldige Records" Checked="CbGeldigeRecords_Checked" FontSize="20" VerticalContentAlignment="Center" Margin="10"></CheckBox>
                <CheckBox x:Name="cbFoutieveRecords" Content="Foutieve Records" Checked="CbFoutieveRecords_Checked" FontSize="20" VerticalContentAlignment="Center" Margin="10"></CheckBox>
            </WrapPanel>
        </GroupBox>

        <Button x:Name="btnAfdrukken" Content="Afdrukken" Click="BtnAfdrukken_Click" FontSize="20" Margin="10"></Button>

        <GroupBox Header="Geldige Records" FontSize="15" Margin="10">
            <Label x:Name="lblGeldigeRecords" FontSize="10"></Label>
        </GroupBox>
        <GroupBox Header="Ongeldige Records" FontSize="15" Margin="10">
            <Label x:Name="lblOngeldigeRecords" FontSize="10"></Label>
        </GroupBox>
    </StackPanel>
</Window>